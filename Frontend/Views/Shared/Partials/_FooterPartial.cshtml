<style>
	html, body {
		height: 100%;
		margin: 0;
		padding: 0;
	}

	.wrapper {
		min-height: 100%;
		position: relative;
		padding-bottom: 60px; 
	}

	.footer {
		background-color: #343a40;
		color: white;
		position: fixed;
		bottom: 0;
		width: 100%;
		height: 60px;
		padding-top: 20px;
	}
</style>

<footer class="footer">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<p>&copy; 2023 Product Site. All Rights Reserved.</p>
			</div>
			<div class="col-sm-6 text-right">
				<a href="#">Privacy Policy</a>
				&nbsp;|&nbsp;
				<a href="#">Terms and Conditions</a>
			</div>
		</div>
	</div>
</footer>

<script>
	$(window).scroll(function () {
		if ($(window).scrollTop() > 0) {
			$('.footer').addClass('fixed-bottom');
		} else {
			$('.footer').removeClass('fixed-bottom');
		}
	});
</script>