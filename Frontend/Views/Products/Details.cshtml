@model ProductsViewModel
@{
    ViewData["Title"] = @Model.Title;
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="https://via.placeholder.com/300x300" alt="Product Image" class="img-fluid">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <h4>@Model.Price💲</h4>
            <p>@Model.Description📖</p>
            <div class="my-3">
                <span class="mr-2">Rating: @Model.Rating/5✨</span>
            </div>
            <p>@Model.ProductType Product🧷</p>
        </div>
    </div>
</div>
